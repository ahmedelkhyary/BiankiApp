<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".HomePage.Home">


    <include
        layout="@layout/content_home" />






    <LinearLayout
        android:visibility="gone"
        android:id="@+id/LinearLayoutofhome"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@color/common_google_signin_btn_text_light_focused"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/recyclerView">


        <LinearLayout
            android:padding="10dp"
            android:visibility="visible"
            android:id="@+id/LinearLayoutofphotoAndvideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="200dp"
            android:layout_marginRight="70dp"
            android:background="@drawable/googlecolorstrok"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/iconpv" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"

                android:text="ADD PHOTO OR VIDEOS"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:padding="10dp"

            android:id="@+id/LinearLayoutoftext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="35dp"
            android:layout_marginRight="70dp"
            android:background="@drawable/googlecolorstrok"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="20sp"
            android:paddingRight="20sp">

            <ImageView
                android:layout_width="30dp"
                android:layout_marginBottom="5dp"

                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/icont" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="TYPE SOMETHING"


                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/fab"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:background="@drawable/uploadimage"


        />


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/backgroundtext"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@color/common_google_signin_btn_text_light_focused"

        >


    <LinearLayout
        android:id="@+id/lineartext"
        android:layout_width="match_parent"

        android:layout_height="320dp"
        android:layout_gravity="center"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/onebackground"
        android:foreground="@drawable/shaplovalblue"

        android:orientation="vertical"
        android:visibility="visible">


        <EditText
            android:id="@+id/gettext"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="10dp"
            android:background="@null"
            android:gravity="top"
            android:paddingTop="20dp"









            android:hint="Write Something .... "





            android:textColorHint="@color/black"
            android:textColor="@color/black"



            android:paddingRight="20sp"
            android:paddingLeft="20sp"

             />


        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:orientation="horizontal">


            <ImageView
                android:id="@+id/one"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="fitXY"
                android:foreground="@drawable/shaplovalbluedown"

                android:layout_marginLeft="6dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/onebackground" />

            <ImageView
                android:padding="1dp"

                android:id="@+id/two"
                android:scaleType="fitXY"
                android:src="@drawable/twobackground"


                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="6dp"
               />

            <ImageView
                android:padding="1dp"

                android:id="@+id/three"
                android:scaleType="fitXY"

                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/threebackground" />

            <ImageView
                android:padding="1dp"

                android:id="@+id/four"
                android:scaleType="fitXY"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/fourbackground" />

            <ImageView
                android:padding="1dp"

                android:id="@+id/five"
                android:scaleType="fitXY"

                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/fivebackground" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">


            <Button
                android:id="@+id/exit"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/post"
                android:text="exit"

                android:textColor="@color/white" />


            <Button
                android:id="@+id/post"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/post"
                android:text="post"
                android:textColor="@color/white"

                />
        </LinearLayout>


    </LinearLayout>
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>